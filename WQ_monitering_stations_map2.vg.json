{ 
 "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 450,
    "title" : {"text": "NSW Water Quality Monitering Stations", "fontSize": 20},
    "projection": {"type": "equirectangular"},
    "layer" : [
        {
            "data": {"url": "Detail_NSW_Map.json",
            "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
            },
            "mark": {"type": "geoshape", "fill":"lightgray","stroke": "white"}
        },
        {
            "data": {"url": "Detail_NSW_Map.json",
            "format": {"type": "topojson", "feature": "ne_10m_ocean"}
            },
            "mark": {"type": "geoshape","fill":"lightblue", "stroke": "white"}
        },
        {
            "data": {"url": "ne_110m_graticules_5.json",
            "format": {"type": "topojson","feature": "ne_110m_graticules_5"}},
            "mark": {"type": "geoshape", "stroke": "darkgrey","fill": null}
        },

        {
            "data": {"url": "populated_places.csv"},
            "layer":[
                {
                    "mark": {"type": "point", "color": "black", "shape": "cross"},
                    "encoding": {
                        "longitude":{"field":"LONGITUDE","type": "quantitative"},
                        "latitude":{"field": "LATITUDE","type": "quantitative"},
                        "size": {"value":1}
                        }
                },
                {
                    "mark": {"type":"text","color": "black", "size": 10, "align": "left", "dx": 4, "dy": 4},
                    "encoding": {
                        "text":{"field":"NAME", "type": "nominal"},
                        "longitude":{"field":"LONGITUDE","type": "quantitative"},
                        "latitude":{"field": "LATITUDE","type": "quantitative"}
                        }
                }
            ]       
        },
        
        {
           "data": { "url": "nsw-coast-wq-station-details.csv"},
           "mark": {"type": "circle","tooltip": {"content":"data"},"fill":"darkblue","size":16},
           "encoding": {
                "longitude":{"field":"Longitude","type": "quantitative"},
                "latitude":{"field": "Latitude","type": "quantitative"},
                "tooltip": [{"field": "Station Number", "type":"nominal"},
                {"field": "Station Name", "type": "nominal"},
                {"field": "Basin Code", "type": "nominal"},
                {"field": "River Basin", "type": "nominal"}]
                
            }
        },
        
        {
            "data":{"url":"monitoring_station map_coast-inland_labels.csv"},
            "mark": {"type":"text", "size": 14, "fontWeight": "bold"},
            "encoding": {
                "text": {"field": "label"},
                "longitude":{"field": "long", "type": "quantitative"},
                "latitude": {"field": "lat", "type": "quantitative"},
                "color":{"field":"label","type": "nominal", "scale":{"range":["darkblue","darkgreen"]}, "legend": null}
            
            }
            
        },
        {
            "data": { "url": "nsw-inland-wq-station-details.csv"},
           "mark": {"type": "circle","tooltip": {"content":"data"},"fill":"darkgreen","size":16},
           "encoding": {
                "longitude":{"field":"Longitude","type": "quantitative"},
                "latitude":{"field": "Latitude","type": "quantitative"},
                "tooltip": [{"field": "Station Number", "type":"nominal"},
                {"field": "Station Name", "type": "nominal"},
                {"field": "Basin Plan WQ zone", "type": "nominal"},
                {"field": "River Basin", "type": "nominal"}]
            }
        }
    
    ]
}

